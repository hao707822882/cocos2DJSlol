  核心是：什么事件，绑定到那个对象上去
  cc.eventManager.addListener({
                        event: cc.EventListener.TOUCH_ONE_BY_ONE,//单击
                        swallowTouches: true,
                        onTouchBegan: function (touch, event) {
                            cc.log("启动主界面");
                            return true;
                        }
                    }, sprite);